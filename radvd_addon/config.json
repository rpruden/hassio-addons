{
  "name": "radvd",
  "version": "0.1.0",
  "slug": "radvd",
  "description": "Router Advertisement Daemon (radvd) with DHCPv6",
  "arch": ["amd64", "armv7", "aarch64", "i386"],
  "startup": "services",
  "boot": "auto",
  "options": {
    "interface": "eno1",
    "prefix": "fc00::/64",
    "log_level": "warning",
    "dhcp_enabled": false,
    "dhcp_range_start": "fc00::100",
    "dhcp_range_end": "fc00::1ff",
    "dhcp_reservations": {}
  },
  "schema": {
    "interface": "string?",
    "prefix": "string?",
    "log_level": "string?",
    "dhcp_enabled": "bool?",
    "dhcp_range_start": "string?",
    "dhcp_range_end": "string?",
    "dhcp_reservations": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    }
  }
}
