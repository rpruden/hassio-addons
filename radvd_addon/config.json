{
  "name": "radvd_multi_instance",
  "version": "0.2.0",
  "slug": "radvd_multi_instance",
  "description": "Router Advertisement Daemon (radvd) with DHCPv6",
  "multi_instance": true,
  "arch": ["amd64", "armv7", "aarch64", "i386"],
  "startup": "services",
  "boot": "auto",
  "options": {
    "interface": "",
    "prefix": "fc00::/64",
    "log_level": "warning",
    "enable_dhcp": false,
    "enable_slaac": true,
    "dhcp_range_start": "fc00::100",
    "dhcp_range_end": "fc00::1ff",
    "dhcpv6_leases": []
  },
  "schema": {
    "interface": "string?",
    "prefix": "string?",
    "log_level": "string?",
    "enable_dhcp": "bool?",
    "enable_slaac": "bool?",
    "dhcp_range_start": "string?",
    "dhcp_range_end": "string?",
    "dhcpv6_leases": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "mac": { "type": "string" },
          "ip": { "type": "string" }
        },
        "required": ["mac", "ip"]
      }
    }
  }
}
